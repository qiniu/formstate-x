{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitOverride": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "lib": ["ESNext", "DOM"],
    "paths": {
      "formstate-x": ["../src"]
    },
    "jsx": "react"
  }
}
